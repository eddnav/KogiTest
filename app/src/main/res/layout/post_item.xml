<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/foreground"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <com.nav.kogi.test.shared.view.SquareImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_primary">

        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:padding="@dimen/post_item_caption_padding"
            android:singleLine="true"
            android:textColor="@color/post_item_caption_text"
            android:textSize="@dimen/post_item_caption_text_size"
            tools:text="Post Caption"/>

    </FrameLayout>

</LinearLayout>